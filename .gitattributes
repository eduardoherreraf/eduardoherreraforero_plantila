# Normalizar todos los archivos de texto a LF en el repositorio
* text=auto eol=lf

# Archivos de código siempre con LF
*.html text eol=lf
*.css  text eol=lf
*.scss text eol=lf
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.md   text eol=lf
*.yaml text eol=lf
*.yml  text eol=lf

# Scripts de shell siempre con LF
*.sh   text eol=lf
*.bash text eol=lf

# Archivos especiales de Windows que sí necesitan CRLF
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf

# Archivos binarios
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.pdf  binary
*.zip  binary
*.gz   binary
*.tar  binary
*.mp4  binary
*.mp3  binary
*.woff binary
*.woff2 binary
*.ttf  binary
*.eot  binary

# Excluir de exportaciones (opcional)
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore